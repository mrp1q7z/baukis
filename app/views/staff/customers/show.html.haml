- @title = '顧客詳細情報'
%h1= @title

.table-wrapper
  %table.attributes
    %tr
      %th(colspan="2") 基本情報
    - c = CustomerPresenter.new(@customer, self)
    %tr
      %th 氏名
      %td= c.full_name
    %tr
      %th フリガナ
      %td= c.full_name_kana
    %tr
      %th 生年月日
      %td.date= c.birthday
    %tr
      %th 性別
      %td.gender= c.gender
    %tr
      %th 登録日時
      %td.date= c.created_at
    %tr
      %th 更新日時
      %td.date= c.updated_at
    - if @customer.home_address
      - a1 = AddressPresenter.new(@customer.home_address, self)
      %tr
        %th(colspan="2") 住宅住所
      %tr
        %th 郵便番号
        %td= a1.postal_code
      %tr
        %th 都道府県
        %td= a1.prefecture
      %tr
        %th 市区町村
        %td= a1.city
      %tr
        %th 町域、番地等
        %td= a1.address1
      %tr
        %th 建物、部屋番号等
        %td= a1.address2
    - if @customer.work_address
      - a2 = AddressPresenter.new(@customer.work_address, self)
      %tr
        %th(colspan="2") 勤務先
      %tr
        %th 会社名
        %td= a2.company_name
      %tr
        %th 部署名
        %td= a2.division_name
      %tr
        %th 郵便番号
        %td= a2.postal_code
      %tr
        %th 都道府県
        %td= a2.prefecture
      %tr
        %th 市区町村
        %td= a2.city
      %tr
        %th 町域、番地等
        %td= a2.address1
      %tr
        %th 建物、部屋番号等
        %td= a2.address2
